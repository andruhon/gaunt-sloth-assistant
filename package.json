{
  "name": "gaunt-sloth-assistant",
  "version": "0.9.11",
  "description": "",
  "license": "MIT",
  "author": "Andrew Kondratev",
  "type": "module",
  "main": "dist/cli.js",
  "repository": "github:Galvanized-Pukeko/gaunt-sloth-assistant",
  "keywords": [
    "ai",
    "agent",
    "mcp",
    "llm",
    "cli"
  ],
  "engines": {
    "node": ">=22.0.0",
    "npm": ">=10.9.0"
  },
  "scripts": {
    "build": "tsc",
    "test": "npx tsc -p spec/tsconfig.json --noEmit && npm run build && vitest run",
    "it": "npm run build && node it.js",
    "lint": "eslint . --ext .js,.ts",
    "lint-n-fix": "eslint . --ext .js,.ts --fix",
    "format": "prettier --write 'src/**/*.{js,ts}'",
    "prepare": "npm run build",
    "typedoc": "typedoc",
    "chat": "node cli.js"
  },
  "bin": {
    "gaunt-sloth-assistant": "cli.js",
    "gaunt-sloth": "cli.js",
    "gsloth": "cli.js",
    "gth": "cli.js"
  },
  "dependencies": {
    "@langchain/anthropic": "^0.3.26",
    "@langchain/core": "^0.3.71",
    "@langchain/deepseek": "^0.1.0",
    "@langchain/google-genai": "^0.2.16",
    "@langchain/google-vertexai": "^0.2.16",
    "@langchain/groq": "^0.2.3",
    "@langchain/langgraph": "^0.4.5",
    "@langchain/mcp-adapters": "^0.6.0",
    "@langchain/openai": "^0.6.7",
    "@langchain/xai": "^0.1.0",
    "commander": "^14.0.0",
    "diff": "^8.0.2",
    "express": "^5.1.0",
    "minimatch": "^10.0.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.26.0",
    "@types/diff": "^8.0.0",
    "@types/express": "^5.0.3",
    "@types/node": "^24.3.0",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.39.1",
    "@typescript-eslint/parser": "^8.39.1",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^16.3.0",
    "prettier": "3.6.2",
    "typedoc": "^0.28.10",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "imports": {
    "#src/*.js": "./dist/*.js"
  },
  "exports": {
    "./*": "./dist/*.js"
  },
  "types": "./dist/*",
  "files": [
    "./dist/*",
    "cli.js",
    ".gsloth.*.md"
  ]
}
